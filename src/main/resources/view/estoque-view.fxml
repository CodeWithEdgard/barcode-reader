<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.br.controller.EstoqueController"
        alignment="CENTER"
        spacing="15"
        prefWidth="400"
        prefHeight="250"
        stylesheets="@/css/estilo.css">
  <Label
                  text="Scaner de Produto"
                  styleClass="titulo" />
  <TextField
                  fx:id="campoCodigo"
                  promptText="Leia o código de barras" />
  <VBox spacing="10" alignment="CENTER">
    <Button
                            fx:id="campoEntrada"
                            text="Registrar Entrada"
                            onAction="#lerEntrada"
                            styleClass="botao-entrada" />
    <Button
                            fx:id="campoSaida"
                            text="Registrar Saída"
                            onAction="#lerSaida"
                            styleClass="botao-saida" />
  </VBox>
  <Label
                  fx:id="labelStatus"
                  text="" />
</VBox>
